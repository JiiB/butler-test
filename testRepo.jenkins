#!/usr/bin/env groovy

multibranchPipelineJob('test-repo') {
    displayName('test-repo cidi')
    branchSources {
        github {
            id('test-repo') // IMPORTANT: use a constant and unique identifier
            repoOwner('rasch-dtc')
            repository('test-repo')            
            scanCredentialsId('poleposition-jenkins-github-secret')
        }
    }
    orphanedItemStrategy {
        discardOldItems {
            numToKeep(20)
        }
    }
}